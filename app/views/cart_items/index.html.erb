<p id="notice"><%= notice %></p>

<h1>Cart Items</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Cart</th>
      <th>Price</th>
      <th>Food</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.name %></td>
        <td><%= cart_item.count %></td>
        <td><%= cart_item.cart.id %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.food.name %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
